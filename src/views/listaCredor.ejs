<br>
<div class="row">
    <div class="col-auto float-left">
        <h1>Credores</h1>
    </div>
    <hr>
</div>
<div class="row">
    <div class="col-auto float-left">
        <a href="/cadastroCredor" class="btn btn-outline-dark float-right"><i class="bi bi-plus-square"></i> Novo credor</a>
    </div>
    <div class="col-auto float-right ms-auto">
        <a href="/" class="btn btn-success float-right">Voltar</a>
    </div>
</div>
<br>
<div class="card">
    <div class="card-body">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Status</th>
                    <!-- <th scope="col">Cr√©dito</th> -->
                </tr>
            </thead>
            <tbody>
                <% if(credores.length > 0) { %>
                    <% for(let credor of credores) { %>
                        <tr>
                            <th scope="row">
                                <%= credor.id %>
                            </th>
                            <td>
                                <%= credor.nome %>
                            </td>
                            <td>
                                <%= credor.status %>
                            </td>
                        </tr>
                        <% } %>
                    <% } else { %>
                        <tr>
                            <td>Nenhum credor foi encontrado</td>
                            <td></td>
                            <td></td>
                        </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
</div>